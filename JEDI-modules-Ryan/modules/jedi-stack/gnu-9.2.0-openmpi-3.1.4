# It's added to this stack build, unlike with the Intel compilers.

set modbasedir /scratch1/NCEPDEV/jcsda/Ryan.Honeyager/jedi/usr/local/gnu-9.2.0/openmpi-3.1.4
prepend-path PATH $modbasedir/bin
setenv CC gcc
setenv CXX g++
setenv FC gfortran

setenv NETCDF_ROOT $modbasedir
setenv BOOST_ROOT $modbasedir

